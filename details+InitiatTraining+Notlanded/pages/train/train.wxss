/* pages/detail/detail.wxss */
/* Kubetnetes入门已报备页面样式设置 */
/* 页面主题设置 */
.main{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 800px;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}
/* 页面文字图片框总体样式 */
.destination_details {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 677px;
  margin-top: 10rpx; 
}
/* 标题 */
.title {
  margin-top: 54px;
  /* width: 178.21px; */
  height: 30px;
  color: #203152;
  font-family: "PingFangSC-Semibold";
  font-size: 24px;
  font-weight: 400;
  line-height: 30px;
  text-align: center;
}
/* 培训人 */
.person {
  width: 170px;
  height: 29.1px;
  color: #7c8698;
  font-family: "PingFangSC-Regular";
  font-size: 12px;
  font-weight: 400;
  line-height: 15px;
  text-align: center;
  border-bottom: #e1e1e1;
  margin-top: 10px;
}
/* 横线设置 */
.divLine{
 background: rgb(241, 241, 239);
 width: 50%;
 height: 5rpx;
}
/* 培训时间 */
.time {
  margin-top: 22px;
  width: 170px;
  height: 15px;
  color: #7c8698;
  font-family: "PingFangSC-Regular";
  font-size: 12px;
  font-weight: 400;
  line-height: 15px;
  text-align: center; /*文字位置*/
}
/* 培训地点 */
.place {
  margin-top: 9px;
  width: 170px;
  height: 15px;
  color: #7c8698;
  font-family: "PingFangSC-Regular";
  font-size: 12px;
  font-weight: 400;
  line-height: 15px;
  text-align: center;
}
/* 图片填充框设置 */
.image_text {
  margin-top: 9px;
  width: 335px;
  height: 200px;
  border-radius: 8px; /*圆角半径*/
  position: relative;
}
/* 图片设置 */
.photo {
  /* margin-top: 9px; */
  width: 335px;
  height: 200px;
  border-radius: 8px; /*圆角半径*/
}
/* 已报备框样式设置 */
.issue {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 34px;
  border-radius: 17px; /*圆角半径*/
  background: #56e75e;
  position: absolute;
  left: 175;
  top: 0;
  right: 0;
  bottom: 140;
  margin-top: 10rpx;
}
/* 需求备注框样式 */
.box1 {
  margin-top: 12px;
  width: 335px;
  height: 127px;
  background: #fff;
  box-shadow: 0px 2px 5px 5px rgb(233, 232, 232);/*盒子阴影效果*/
  border-radius: 10px; /*圆角半径*/
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;    /*防止盒子被撑大了*/
  overflow: auto;   /*溢出处理*/
} 
/* 需求备注框文字样式--color灰色 */
.box1 text {
  margin-top: 3px;
  width: 287px;
  height: 124px;
  color: #b6b9be;
  font-family: "PingFangSC-Regular";  
  font-size: 14px;
  font-weight: 400;
  line-height: 18px;
}
/* 备注简介框样式 */
.box2 {
  margin-top: 17px;
  width: 335px;
  height: 127px;
  background: #fff;
  box-shadow: 0px 2px 5px 5px rgb(233, 232, 232); /*盒子阴影效果*/
  border-radius: 10px; /*圆角半径*/
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;    /*防止盒子被撑大了*/
  overflow: auto;   /*溢出处理*/
}
/* 备注简介文字样式 */
.box2 text {
  margin-top: 3px;
  width: 287px;
  height: 124px;
  color: #203152;
  font-family: "PingFangSC-Regular";
  font-size: 14px;
  font-weight: 400;
  line-height: 18px;
}
/* 发布通知按钮样式设计 */
.start {
  width: 295px !important;
  height: 55px !important;
  background: #5680fa;
  border-radius: 27.5px;   /*圆角半径*/
  color: white;
  padding: 0!important;
  margin-top: 21px!important;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 按钮按下时阴影效果 */
.other-button-class{
  background-color:#5a83fdc4;
}
/* 按钮文字部分布局 */
.startttext{
  display: flex;
  align-items: center;
  font-family: "PingFangSC-Semibold";
  font-size: 21px;
  font-weight: 400;
  line-height: 27px;
}